rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Los perfiles son públicos para leer, pero solo el dueño puede escribir.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Permite escritura para usuarios autenticados
      allow create: if request.auth != null; // Permite creación para usuarios autenticados
    }

    // Regla de 'likes' temporalmente más abierta para depuración.
    match /likes/{likeId} {
      allow read, write: if request.auth != null;
    }

    // Solo los miembros de una conversación pueden acceder a ella y a sus mensajes.
    match /conversations/{conversationId} {
      allow read, delete: if request.auth != null; // Simplificado para permitir acceso
      allow create: if request.auth != null; // Permite creación para usuarios autenticados

      match /messages/{messageId} {
        allow read, create: if request.auth != null; // Simplificado
        allow update, delete: if request.auth != null; // Simplificado
      }
    }

    // Reglas adicionales para posts y otros datos
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Reglas para matches
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}