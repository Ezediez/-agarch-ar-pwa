rules_version = '2';

// Reglas para Firebase Storage - AGARCH-AR
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para media de usuarios
    match /media/{userId}/{allPaths=**} {
      // Solo el usuario autenticado puede leer y escribir sus propios archivos
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para fotos de perfil
    match /media/{userId}/profile-photos/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para fotos de posts
    match /media/{userId}/posts/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para videos
    match /media/{userId}/videos/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para stories
    match /media/{userId}/stories/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para archivos públicos (solo lectura)
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Reglas para archivos VIP/Premium (solo usuarios con suscripción activa)
    match /vip/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para archivos de publicidad
    match /advertisements/{advertiserId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == advertiserId;
    }
    
    // Reglas para archivos de administración
    match /admin/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
